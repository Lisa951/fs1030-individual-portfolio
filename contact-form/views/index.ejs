<%- include ('./partials/header.ejs') -%>
    <div class="table-wrapper">
        <% if (portfolio.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Project Name</th>
                        <th scope="col">Date For Project</th>
                        <th scope="col">Purpose of Project</th>
                        <th scope="col">Portfolio Item </th>
                    
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% portfolio.forEach((portfolio, index) => { %>
                        <tr>
                            <th scope="row"><%= portfolio.portfolioitem %></th>
                            <td><%= portfolio.projectName %></td>
                            <td><%= portfolio.projectDate %></td>
                            <td><%= portfolio.projectPurpose %></td>
                            <td><%= portfolio.projectDescription %></td>
                            <td><%= portfolio.portfolioItem %></td>
                            <td>
                                <a href="/edit/<%= portfolio.portfolioItem %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= portfolio.portfolioItem %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">Portfolio Item cannot be found. Go <a href="/add" >here</a> to add Portfolio Items.</p>
        <% } %>
    </div>
</div>
</body>
</html>